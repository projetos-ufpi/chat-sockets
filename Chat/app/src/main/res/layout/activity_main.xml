<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chat.nupasd_ufpi.chat.MainActivity">

    <TextView
        android:id="@+id/txt_ExibirMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edt_IP"
        android:layout_below="@+id/btn_IP"
        android:layout_marginTop="113dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btn_Mensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edt_Mensagem"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="Enviar"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="423dp" />

    <Button
        android:id="@+id/btn_IP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edt_IP"
        android:layout_alignBottom="@+id/edt_IP"
        android:layout_alignEnd="@+id/btn_Mensagem"
        android:text="Conectar"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="33dp" />

    <EditText
        android:id="@+id/edt_IP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="EndereÃ§o IP"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="33dp" />

    <EditText
        android:id="@+id/edt_Mensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edt_IP"
        android:layout_marginBottom="123dp"
        android:layout_marginStart="11dp"
        android:ems="10"
        android:hint="Mensagem"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="423dp" />

    <Button
        android:id="@+id/btn_IniciarServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_IP"
        android:layout_alignStart="@+id/edt_IP"
        android:layout_below="@+id/btn_IP"
        android:text="Iniciar Servidor" />
</RelativeLayout>
